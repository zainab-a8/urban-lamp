<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory android:title="@string/pref_title_appearance">
    <com.jmstudios.redmoon.preference.ProfileSelectorPreference
        android:key="@string/pref_key_profile_spinner"
        android:defaultValue="1"/>

    <com.jmstudios.redmoon.preference.ColorSeekBarPreference
        android:key="@string/pref_key_color"
        android:defaultValue="10" />

    <com.jmstudios.redmoon.preference.IntensitySeekBarPreference
        android:key="@string/pref_key_intensity"
        android:defaultValue="50" />

    <com.jmstudios.redmoon.preference.DimSeekBarPreference
        android:key="@string/pref_key_dim"
        android:defaultValue="50" />

    <SwitchPreference
        android:key="@string/pref_key_lower_brightness"
        android:title="@string/control_brightness_title"
        android:defaultValue="true" />
  </PreferenceCategory>

  <PreferenceCategory android:title="@string/pref_title_other"
                      android:key="pref_key_other" >
    <Preference
        android:title="@string/pref_title_time_toggle"
        android:key="@string/pref_key_time_toggle_header">
      <!-- Specifying a specific action for this activity seems like
           an effective way to ensure that the right Activity is
           opened. -->
        <intent
            android:action="com.jmstudios.redmoon.activity.TimeToggleActivity" />
  </Preference>

  <Preference
        android:title="@string/secure_suspend_title"
        android:key="@string/pref_key_secure_suspend_header">
      <!-- Specifying a specific action for this activity seems like
           an effective way to ensure that the right Activity is
           opened. -->
        <intent
            android:action="com.jmstudios.redmoon.activity.SecureSuspendActivity" />
  </Preference>

    <SwitchPreference
        android:key="@string/pref_key_dark_theme"
        android:title="@string/dark_theme"
        android:defaultValue="false" />
  </PreferenceCategory>
</PreferenceScreen>
